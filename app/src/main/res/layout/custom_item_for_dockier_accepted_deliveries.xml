<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="DELIVERIES"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.21"
                android:gravity="center">


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/delivery_delivery_parcel_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:src="@drawable/delivery"
                    app:civ_border_color="#fff"
                    app:civ_border_width="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.79"
                android:orientation="vertical"
                android:paddingBottom="3dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"

                    android:paddingTop="7dp">

                    <TextView
                        android:id="@+id/delivery_delivery_start_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:drawableLeft="@drawable/current_location"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/delivery_delivery_end_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:drawableLeft="@drawable/pin"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Deliveries"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dp">

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="fill_parent" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/delivery_delivery_txt"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.15"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/delivery_delivery_rs"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@android:color/black" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:background="#CCC" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>

    </LinearLayout>
</LinearLayout>